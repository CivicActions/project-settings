{
  "name": "civicactions/project-settings",
  "description": "PHP Project Settings and Secrets Management platform/environment switcher",
  "type": "library",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Kristian Ducharme",
      "email": "kristian.ducharme@civicactions.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "aws/aws-sdk-php": "^3.308",
    "ulrichsg/getopt-php": "^4.0"
  },
  "minimum-stability": "stable",
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "CivicActions\\ProjectSettings\\": "src/"
    }
  },
  "require-dev": {
    "g1a/composer-test-scenarios": "^1",
    "php-coveralls/php-coveralls": "^2.9",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "scripts": {
    "cs": "phpcs -n --standard=PSR2 src tests environments --exclude=Generic.Files.LineLength",
    "cbf": "phpcbf -n --standard=PSR2 src tests environments --exclude=Generic.Files.LineLength",
    "unit": "XDEBUG_MODE=coverage phpunit --coverage-clover coverage/clover.xml",
    "lint": [
      "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
      "find tests -name '*.php' -print0 | xargs -0 -n1 php -l",
      "find environments -name '*.php' -print0 | xargs -0 -n1 php -l"
    ],
    "test": [
      "@lint",
      "@unit",
      "@cs"
    ],
    "scenario": "scenarios/install",
    "post-update-cmd": [
      "create-scenario symfony6 'symfony/console:^6.0'",
      "create-scenario symfony5 'symfony/console:^5.0'"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "8.1"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  }
}
