{
  "name": "kducharm/project_settings",
  "description": "PHP Project Settings platform/environment switcher",
  "type": "library",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Kristian Ducharme",
      "email": "kristian.ducharme@civicactions.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.2"
  },
  "minimum-stability": "stable",
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "require-dev": {
    "g1a/composer-test-scenarios": "^1",
    "php-coveralls/php-coveralls": "^1.0.2|dev-master",
    "phpunit/phpunit": "^4.8|^5.5.4",
    "squizlabs/php_codesniffer": "^2.7",
    "symfony/console": "^2.8"
  },
  "scripts": {
    "cs": "phpcs -n --standard=PSR2 src tests --exclude=Generic.Files.LineLength",
    "cbf": "phpcbf -n --standard=PSR2 src tests --exclude=Generic.Files.LineLength",
    "unit": "phpunit",
    "lint": [
      "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
      "find tests -name '*.php' -print0 | xargs -0 -n1 php -l"
    ],
    "test": [
      "@lint",
      "@unit",
      "@cs"
    ],
    "scenario": "scenarios/install",
    "post-update-cmd": [
      "create-scenario symfony4 'symfony/console:^4.0'",
      "create-scenario symfony2 'symfony/console:^2.8' --platform-php '5.6' --no-lockfile"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "5.6"
    },
    "vendor-dir": "../../vendor"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  }
}
